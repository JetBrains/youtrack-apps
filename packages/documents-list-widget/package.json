{
  "name": "documents-list-widget",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json && vite build && youtrack-app validate dist",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "test": "echo 'no tests'",
    "i18n:extract": "angular-gettext-cli --files \"{src/**/*.js,src/**/*.ts,src/**/*.tsx}\" --dest translations/default.pot --marker-name=i18n --module-method-plural=plural --module-name=i18n",
    "release:bump-version": "commit-and-tag-version --release-as patch --bumpFiles manifest.json --packageFiles manifest.json",
    "release:ci": "npm run release:bump-version && npm run build && npm run pack && npm run upload:marketplace && git push --follow-tags origin main",
    "upload:marketplace": "curl -X POST -L -v --fail -H \"Authorization: Bearer $pluginsRepositoryToken\" -F \"pluginId=$pluginRepositoryID\" -F \"file=@documents-list-widget.zip;type=application/zip\" https://plugins.jetbrains.com/plugin/uploadPlugin",
    "pack": "rm -rf documents-list-widget.zip && cd dist/ && bestzip ../documents-list-widget.zip *",
    "upload": "youtrack-app upload dist"
  },
  "dependencies": {
    "@jetbrains/icons": "^5.12.0",
    "@jetbrains/ring-ui-built": "^7.0.8",
    "classnames": "^2.5.1",
    "core-js": "3.38.0",
    "date-fns": "^4.1.0",
    "postcss-nesting": "^13.0.2",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.13.0",
    "@jetbrains/eslint-config": "^6.0.2",
    "@jetbrains/youtrack-apps-tools": "^0.0.1",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "angular-gettext-cli": "^1.2.0",
    "bestzip": "^2.2.1",
    "commit-and-tag-version": "^12.6.0",
    "eslint": "^9.13.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.11.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.1",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^6.0.1",
    "vite-plugin-static-copy": "^2.2.0"
  },
  "commit-and-tag-version": {
    "skip": {
      "tag": true
    }
  }
}
