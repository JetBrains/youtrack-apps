{
  "compilerOptions": {
    "target": "ES2023",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": ["jest", "node"],
    "outDir": "dist"
  },
  "include": ["@types/**/*", "src", "lib"],
  "exclude": ["node_modules"]
}
